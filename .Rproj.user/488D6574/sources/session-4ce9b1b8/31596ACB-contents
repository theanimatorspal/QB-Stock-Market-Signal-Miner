source("scraper.R")

generate_features <- function(data) {
  data <- data %>% 
    select(date, adjusted) %>% 
    mutate(
      returns = dailyReturn(adjusted, type = "log", order.by = date)
#      SMA_10 = SMA(adjusted, n = 10),
#      SMA_50 = SMA(adjusted, n = 50)
      )
  return (data)
}

stock_data <- get_stock_data()
features <- generate_features(stock_data)
